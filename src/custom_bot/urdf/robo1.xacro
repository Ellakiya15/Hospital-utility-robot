<?xml version="1.0"?>
<robot name="diffbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="yellow_light">
        <color rgba="1.0 1.0 0.0 0.7"/>
    </material>

    <material name ='wooden'>
        <color rgba='0.76 0.60 0.024 1'/>
    </material>

    <material name ='black'>
        <color rgba='0.0 0.0 0.0 1'/>
    </material>

    <link name="base_link">
    </link>

    <link name="base_footprint">
    </link>
    
    <joint name="footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- B O D Y - Updated to 30x30cm -->
    <link name="chassis">
        <visual>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="wooden"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <!-- Updated inertia for 30x30cm chassis -->
            <inertia ixx="0.001125" ixy="0" ixz="0" iyy="0.001125" iyz="0" izz="0.0015"/>
        </inertial>

    </link>

    <joint name="base_link_joint" type="fixed">
        <origin rpy="0 0 1.57" xyz="0 0 0" />
        <parent link="base_link" />
        <child link="chassis" />
    </joint>

    <!-- Wheel Left - Position adjusted for 30cm width -->
    <link name="left_wheel">
        <visual>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.06" radius="0.09"/>
            </geometry>
            <material name="yellow_light"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.06" radius="0.09"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.00023250000000000004" ixy="0" ixz="0" iyy="0.00023250000000000004" iyz="0" izz="0.000405"/>
        </inertial>
    </link>
    
    <gazebo reference="left_wheel">
        <kp>100000000000000000000.0</kp>
        <kd>100000000000000000000.0</kd>
        <mu1>10</mu1>
        <mu2>10</mu2>
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="joint_left_wheel" type="continuous">
        <!-- Updated position: 15cm from center for 30cm chassis -->
        <origin rpy="0 0 0" xyz="0.15 0 -0.025"/>
        <child link="left_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="1 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Wheel Right - Position adjusted for 30cm width -->
    <link name="right_wheel">
        <visual>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.06" radius="0.09"/>
            </geometry>
            <material name="yellow_light"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.06" radius="0.09"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.00023250000000000004" ixy="0" ixz="0" iyy="0.00023250000000000004" iyz="0" izz="0.000405"/>
        </inertial>
    </link>

    <gazebo reference="right_wheel">
        <kp>100000000000000000000.0</kp>
        <kd>100000000000000000000.0</kd>
        <mu1>10</mu1>
        <mu2>10</mu2>
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="joint_right_wheel" type="continuous">
        <!-- Updated position: -15cm from center for 30cm chassis -->
        <origin rpy="0 0 0" xyz="-0.15 0 -0.025"/>
        <child link="right_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="1 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Caster Wheel Front - Position adjusted for 30cm length -->
    <link name="front_yaw_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
              <cylinder length="0.005" radius="0.04"/>
            </geometry>
            <material name="wooden"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.005" radius="0.04"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="4.020833333333333e-07" ixy="0" ixz="0" iyy="4.020833333333333e-07" iyz="0" izz="8.000000000000001e-07"/>
        </inertial>
    </link>

    <joint name="front_yaw_joint" type="continuous">
        <!-- Updated position: 12cm from center for 30cm chassis (leaving 6cm margin) -->
        <origin rpy="0 0 0" xyz="0 -0.12 -0.075"/>
        <parent link="chassis" />
        <child link="front_yaw_link" />
        <axis xyz="0 0 1" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <gazebo reference="front_yaw_link">
        <material>Gazebo/Purple</material>
    </gazebo>

    <link name="front_roll_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.005" radius="0.04"/>
            </geometry>
            <material name="wooden"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.005" radius="0.04"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="4.020833333333333e-07" ixy="0" ixz="0" iyy="4.020833333333333e-07" iyz="0" izz="8.000000000000001e-07"/>
        </inertial>
    </link>

    <joint name="front_roll_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="front_yaw_link" />
        <child link="front_roll_link" />
        <axis xyz="1 0 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>
        
    <gazebo reference="front_roll_link">
        <material>Gazebo/Purple</material>
    </gazebo>

    <link name="front_pitch_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="wooden"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="6.4e-07" ixy="0" ixz="0" iyy="6.4e-07" iyz="0" izz="6.4e-07"/>
        </inertial>
    </link>

    <gazebo reference="front_pitch_link">
        <kp>100000000000000.0</kp>
        <kd>100000000000000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/Purple</material>
    </gazebo>

    <joint name="front_pitch_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="front_roll_link" />
        <child link="front_pitch_link" />
        <axis xyz="0 1 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- Caster Wheel Back - Position adjusted for 30cm length -->
    <link name="back_yaw_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
              <cylinder length="0.005" radius="0.04"/>
            </geometry>
            <material name="wooden"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.005" radius="0.04"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="4.020833333333333e-07" ixy="0" ixz="0" iyy="4.020833333333333e-07" iyz="0" izz="8.000000000000001e-07"/>
        </inertial>
    </link>

    <joint name="back_yaw_joint" type="continuous">
        <!-- Updated position: +12cm from center for 30cm chassis (leaving 6cm margin) -->
        <origin rpy="0 0 0" xyz="0 0.12 -0.075"/>
        <parent link="chassis" />
        <child link="back_yaw_link" />
        <axis xyz="0 0 1" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <gazebo reference="back_yaw_link">
        <material>Gazebo/Purple</material>
    </gazebo>

    <link name="back_roll_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.005" radius="0.04"/>
            </geometry>
            <material name="wooden"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.005" radius="0.04"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="4.020833333333333e-07" ixy="0" ixz="0" iyy="4.020833333333333e-07" iyz="0" izz="8.000000000000001e-07"/>
        </inertial>
    </link>

    <joint name="back_roll_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="back_yaw_link"/>
        <child link="back_roll_link"/>
        <axis xyz="1 0 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>
        
    <gazebo reference="back_roll_link">
        <material>Gazebo/Purple</material>
    </gazebo>

    <link name="back_pitch_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="wooden"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="6.4e-07" ixy="0" ixz="0" iyy="6.4e-07" iyz="0" izz="6.4e-07"/>
        </inertial>
    </link>

    <gazebo reference="back_pitch_link">
        <kp>100000000000000.0</kp>
        <kd>100000000000000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/Purple</material>
    </gazebo>

    <joint name="back_pitch_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="back_roll_link" />
        <child link="back_pitch_link" />
        <axis xyz="0 1 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- L A S E R - Position remains optimal for sensor coverage -->
    <link name="laser_frame">
        <visual>
            <geometry>
                <mesh filename="file://$(find custom_bot)/models/rplidar.dae" scale="1.5 1.5 1.5"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001808333333333333" ixy="0" ixz="0" iyy="0.0001808333333333333" iyz="0" izz="0.00032"/>
        </inertial>
    </link>

    <joint name="laser_joint" type="fixed">
        <parent link="chassis"/>
        <child link="laser_frame"/>
        <origin xyz="0 0 0.08" rpy="0 0 1.57"/>
    </joint>

  <!-- Gazebo Plugin for Differential Drive - Updated wheel separation -->  
  <gazebo>

    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
            <render_engine>ogre2</render_engine>
    </plugin>

    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
            <left_joint>joint_left_wheel</left_joint>
            <right_joint>joint_right_wheel</right_joint>
            <!-- Updated wheel separation for 30cm chassis: 30cm between wheels -->
            <wheel_separation>0.30</wheel_separation>
            <wheel_radius>0.09</wheel_radius>
            <odom_publish_frequency>30</odom_publish_frequency>
            <max_wheel_torque>10.0</max_wheel_torque>       
            <max_wheel_acceleration>1.0</max_wheel_acceleration>
            <topic>/cmd_vel</topic>
            <odom_topic>/odom</odom_topic>
            <frame_id>odom</frame_id>
            <child_frame_id>base_link</child_frame_id>
    </plugin>

    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <update_rate>50</update_rate>
      <joint_name>joint_left_wheel</joint_name>
      <joint_name>joint_right_wheel</joint_name>
      <topic>joint_states</topic>
      <update_rate>30</update_rate>
    </plugin>

    <plugin filename="gz-sim-odometry-publisher-system" name="gz::sim::systems::OdometryPublisher">
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <dimensions>2</dimensions>
      <odom_publish_frequency>10</odom_publish_frequency>
    </plugin>
  </gazebo>

  <gazebo reference="laser_frame">
        <sensor name='gpu_lidar' type='gpu_lidar'>
            <topic>scan</topic>
            <update_rate>30</update_rate>
            <gz_frame_id>laser_frame</gz_frame_id>
            <lidar>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.05</min>
                    <max>20.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.001</stddev>
                </noise>
            </lidar>
            <always_on>1</always_on>
            <visualize>true</visualize>
        </sensor>
  </gazebo>
</robot>